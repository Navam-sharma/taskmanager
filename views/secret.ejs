<html lang="en">
<%- include("./partials/head.ejs") %>

<body>
  <%- include("./partials/nav.ejs") %>

  <div class="blogs content">
    <h2>All tasks , Click on task to update it or remove it </h2>

    <% if (tasks.length > 0) { %>
      <% tasks.forEach(eachtask => { %>
        <a class="single" href="/tasks/<%= eachtask.id %>">
          <h3 class="title"><%= eachtask.name %></h3>
          <p class="snippet"><%= eachtask.description %></p>
        </a>
      <% }); %>
    <% } else { %>
      <p>There are no tasks to display...</p>
    <% } %>
    
  </div>

  <%- include("./partials/footer.ejs") %>
</body>
</html>